<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="NumberButton" parent="CalculatorButton">
        <item name="android:background">@drawable/secondary_button_selector</item>
    </style>

    <style name="LargeNumberButton" parent="NumberButton">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="OperationButton" parent="CalculatorButton">
        <item name="android:background">@drawable/primary_button_selector</item>
    </style>

    <style name="LargeOperationButton" parent="OperationButton">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
